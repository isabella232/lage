{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "docs"
    ]
  },
  "scripts": {
    "build": "yarn workspace lage build --scope !@lage/docs",
    "change": "beachball change",
    "checkchange": "beachball check",
    "release": "beachball publish -y --tag unstable",
    "start": "yarn workspace lage start --scope !@lage/docs",
    "test": "yarn workspace lage test --scope !@lage/docs",
    "docs": "yarn workspace @lage/docs start",
    "docs:build": "yarn workspace @lage/docs build",
    "gh-pages": "gh-pages"
  },
  "resolutions": {
    "mermaid": "8.6.4"
  },
  "devDependencies": {
    "beachball": "^2.16.0",
    "gh-pages": "^2.2.0",
    "jest": "^27.2.0",
    "renovate": "^23.42.2",
    "lage": "^1.5.0"
  }
}
